@model IEnumerable<MyToDoList.Models.ToDo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">To Do List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ToDo" asp-action="Create" class=" btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New To Do
            </a>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                   Things To Do
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Id</td>
                    <td width="30%">@obj.Todo</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ToDo" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit">Edit</i>
                            </a>
                            <a asp-controller="ToDo" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt">Delete</i>
                            </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nothing to do right now.</p>
}

